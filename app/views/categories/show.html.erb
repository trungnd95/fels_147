<%= content_for :title do %>
  <%= t "page.front-end.categories.detail" %>
<% end %>

<%= content_for :page_title do %>
  <%= t "page.front-end.categories.detail" %>
<% end %>

<% if @lessons.size > 0 %>
  <% @lessons.each do |lesson| %>
    <%= link_to lesson.id, [@category,lesson],
      class: "btn btn-#{lesson.is_completed.nil? ? "primary" : "danger"}" %>
  <% end %>
<% else %>
  <p class="text-info"><%= t "page.front-end.categories.no_content" %></p>
<% end %>
<br/><hr/>
<h4><%= t "category.lesson.start" %></h4>
<%= form_for [@category, @lesson] do |f| %>
  <%= f.submit t("category.lesson.create"), class: "btn btn-primary" %>
<% end %>

