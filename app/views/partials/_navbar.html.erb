<div class="space navbar-collapse">
  <ul class="breadcrumbs nav navbar-nav">
    <li class="active">
      <%= link_to root_path do %>
        <i class="fa fa-home" aria-hidden="true"></i>
        <%= t("page.master.menu.home") %>
      <% end%>
    </li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
    <li class="feedback">
      <%= link_to categories_path do %>
        <i class="fa fa-book" aria-hidden="true"></i>
        <%= t "page.master.menu.courses" %>
      <% end %>
    </li>
    <li class="words">
      <%= link_to(words_path) do %>
        <i class="fa fa-file-text-o" aria-hidden="true"></i>
        <%= t "page.master.menu.words" %>
      <% end %>
    </li>
    <% if logged_in? %>
      <li>
        <%= link_to(users_path) do %>
          <i class="fa fa-users" aria-hidden="true"></i>
          <%= t("userLink.list") %>
        <% end %>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%=current_user.name%> <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" style="background:#5a94f4">
          <li><%= link_to t("userLink.profile"), current_user %></li>
          <li><%= link_to t("userLink.settings"), edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to t("userLink.logout"), logout_path, method: "delete" %>
          </li>
        </ul>
      </li>
    <% else %>
      <li class="signup">
        <%= link_to new_user_path do %>
          <i class="fa fa-registered" aria-hidden="true"></i>
          <%= t("page.master.menu.signup") %>
        <% end %>
      </li>
      <li>
        <%= link_to login_path do %>
          <i class="fa fa-sign-in" aria-hidden="true"></i>
          <%= t("userLink.login") %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
